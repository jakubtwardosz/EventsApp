@page "/edit/events"

@inject IEventService EventService
@inject NavigationManager NavigationManager

<h3>Events</h3>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Date</th>
            <th>Street</th>
            <th>City</th>
            <th>Price</th>
            <th>Image url</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in EventService.Events)
        {
            <tr>
                <td>@ev.Title</td>
                <td>@ev.Description</td>
                <td>@ev.Date</td>
                <td>@ev.Address.Street</td>
                <td>@ev.Address.City</td>
                <td>@ev.Price</td>
                <td>@ev.ImageUrl</td>
                <td>
                    <button class="btn btn-primary"
                        @onclick="(() => ShowEvent(ev.Id))">
                        <i class="oi oi-pencil"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<button class="btn btn-primary"
        @onclick="CreateNewEvent">
    Create New Event
</button>

@code {
    protected override async Task OnInitializedAsync()
    {
        await EventService.GetEvents();
    }

    void ShowEvent(int id)
    {
        NavigationManager.NavigateTo($"edit/event/{id}");
    }

    void CreateNewEvent()
    {
        NavigationManager.NavigateTo("edit/event");
    }
}
