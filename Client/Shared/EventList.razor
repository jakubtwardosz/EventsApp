<div class="container mt-4">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach (var ev in Events)
    {

            <div class="col">
                <div class="card shadow-sm">
                    <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="@ev.ImageUrl"/>
                    <div class="card-body">
                        <h5 class="card-title">@ev.Title</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@ev.Address, @ev.City</h6>
                        <p class="card-text">@ev.Description</p>

                        <p class="card-text"><small class="text-muted">Start: @ev.StartDate, End: @ev.EndDate</small></p>
                        <p class="card-text"><small class="text-muted">Price @ev.Price</small></p>
                    </div>
                </div>
            </div>
        
    }
    </div>
</div>




